{
  "name": "aws-monorepo-backend",
  "description": "AWS Monorepo - Backend",
  "version": "0.1.0",
  "private": true,
  "author": "alvaro@basallo.es",
  "scripts": {
    "build": "tsc ./src --outDir ./build --source-maps --ignore '**/*.test.js'",
    "test": "NODE_ENV=test jest --testPathPattern=/src --testEnvironment=node",
    "e2e": "NODE_ENV=test jest --testPathPattern=/e2e --testEnvironment=node",
    "start": "NODE_ENV=dev nodemon --exec babel-node src/server.ts --source-maps",
    "debug": "NODE_ENV=dev nodemon --exec babel-node src/server.ts --inspect --source-maps",
    "prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@types/aws-serverless-express": "^3.3.5",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "apollo-server": "^3.11.1",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.11.1",
    "aws-serverless-express": "^3.4.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "http-status-codes": "^2.2.0",
    "pg": "^8.8.0",
    "sequelize": "^6.28.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "apollo-fetch": "^0.7.0",
    "axios": "^1.2.2",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "sqlite3": "^5.1.4"
  }
}
